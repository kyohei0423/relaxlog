{
  "version": 2,
  "projects": {
    "customer": {
      "root": "apps/customer",
      "sourceRoot": "apps/customer",
      "projectType": "application",
      "targets": {
        "build": {
          "executor": "@nrwl/next:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "root": "apps/customer",
            "outputPath": "dist/apps/customer"
          },
          "configurations": {
            "production": {}
          }
        },
        "serve": {
          "executor": "@nrwl/next:server",
          "options": {
            "buildTarget": "customer:build",
            "dev": true
          },
          "configurations": {
            "production": {
              "buildTarget": "customer:build:production",
              "dev": false
            }
          }
        },
        "export": {
          "executor": "@nrwl/next:export",
          "options": {
            "buildTarget": "customer:build:production"
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/apps/customer"],
          "options": {
            "jestConfig": "apps/customer/jest.config.js",
            "passWithNoTests": true
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["apps/customer/**/*.{ts,tsx,js,jsx}"]
          }
        }
      }
    },
    "customer-e2e": {
      "root": "apps/customer-e2e",
      "sourceRoot": "apps/customer-e2e/src",
      "projectType": "application",
      "targets": {
        "e2e": {
          "executor": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/customer-e2e/cypress.json",
            "tsConfig": "apps/customer-e2e/tsconfig.e2e.json",
            "devServerTarget": "customer:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "customer:serve:production"
            }
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["apps/customer-e2e/**/*.{js,ts}"]
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/next"
  },
  "generators": {
    "@nrwl/react": {
      "application": {
        "babel": true
      }
    },
    "@nrwl/next": {
      "application": {
        "style": "scss",
        "linter": "eslint"
      }
    }
  },
  "defaultProject": "customer"
}
